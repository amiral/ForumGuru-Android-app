<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/pad_10dp"
    android:layout_width="fill_parent"
    android:layout_marginBottom="@dimen/pad_5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#252338">


    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad_10dp" android:layout_weight="1.0">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:id="@+id/f_pic" />
            <TextView
                android:textSize="@dimen/txt_16sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"

                android:layout_marginLeft="@dimen/pad_10dp"
android:gravity="center_vertical"
               android:id="@+id/r_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/pad_10dp">
            <TextView android:textSize="@dimen/txt_16sp"
                android:gravity="center_vertical"

                android:textColor="#e1cbcb"

                android:id="@+id/r"
                android:layout_marginLeft="@dimen/pad_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            >
            <TextView android:textSize="@dimen/txt_12sp"
                android:textColor="#beafaf"

                android:layout_gravity="end"
                android:text=""

                android:id="@+id/tmb"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_30dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/pad_5dp">

    </LinearLayout>
</LinearLayout>
