<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.omc.lilliput.Index"
    android:orientation="vertical"
    android:background="@drawable/front1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forum Guru "
        android:layout_marginTop="@dimen/pad_10dp"
        android:textColor="@color/white_smoke"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:textSize="45sp"
        android:textStyle="bold"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Everyday doubts cleared here "
        android:layout_marginTop="@dimen/pad_20dp"
        android:textColor="@color/white_smoke"
        android:id="@+id/te"
android:layout_marginLeft="@dimen/pad_20dp"
        android:textSize="20sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-->> Discuss topics related to your field of interest "
        android:layout_marginTop="@dimen/pad_10dp"
        android:textColor="@color/white_smoke"
        android:id="@+id/tes"
        android:layout_marginLeft="@dimen/pad_20dp"

        android:textSize="14sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Take the best advantage of communication"
        android:layout_marginTop="@dimen/pad_20dp"
        android:textColor="@color/white_smoke"
        android:id="@+id/tee"
        android:layout_marginLeft="@dimen/pad_20dp"
        android:textSize="20sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-->> Now you can inbox your friends related to the topics "
        android:layout_marginTop="@dimen/pad_10dp"
        android:textColor="@color/white_smoke"
        android:id="@+id/tess"
        android:layout_marginLeft="@dimen/pad_20dp"

        android:textSize="14sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lets join hands in creating a self reliant community of innovative minds. Sign up today for free!"
        android:layout_marginTop="@dimen/pad_20dp"
        android:textColor="@color/white_smoke"
        android:id="@+id/teem"
        android:lineSpacingMultiplier="1.2"

        android:layout_marginLeft="@dimen/pad_20dp"
        android:textSize="18sp"

        />

    <Button android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Continue"
        android:textColor="#fff"
        android:textSize="13dp"
        android:background="#D24958"
        android:id="@+id/bl"
        android:onClick="onClick" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developed and maintained by Chandan A V"
        android:layout_marginTop="@dimen/pad_20dp"
        android:textColor="@color/white_smoke"
        android:id="@+id/tml"
        android:layout_gravity="center"
        android:lineSpacingMultiplier="1.2"

        android:textSize="15sp"

        />


</LinearLayout>
