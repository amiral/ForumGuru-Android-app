<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#4E495C"

    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#502B3F"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:weightSum="1">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"

            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textStyle="bold"

            android:layout_gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            />




    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_5dp"
        android:layout_marginBottom="@dimen/pad_10dp">
        <ListView
            android:id="@+id/ltt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#706B96"
            android:background="#252338"
            android:dividerHeight="0.5dp"
            tools:listitem="@layout/aboutus" >
        </ListView>
    </LinearLayout>


</LinearLayout>
